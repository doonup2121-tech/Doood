name: Wizard Mirror Build

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch: # يسمح لك بتشغيل البناء يدوياً

jobs:
  build:
    runs-on: macos-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Install Theos
        run: |
          export THEOS=~/theos
          bash -c "$(curl -fsSL https://raw.githubusercontent.com/theos/theos/master/bin/install-theos)"
          echo "THEOS=~/theos" >> $GITHUB_ENV

      - name: Build Mirror Library
        run: |
          export THEOS=$THEOS
          make package

      # هذه هي الخطوة التي تصنع "خانة" التحميل أسفل الصفحة
      - name: Upload Dylib Artifact
        uses: actions/upload-artifact@v3
        with:
          name: WizardMirror-Dylib-Output
          path: .theos/obj/WizardMirror.dylib
